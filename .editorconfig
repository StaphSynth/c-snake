# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# C source files
[*.{c,h}]
indent_style = space
indent_size = 4

# Makefiles require tabs
[Makefile]
indent_style = tab
indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false